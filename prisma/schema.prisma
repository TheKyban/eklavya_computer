datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    userId    String    @unique
    name      String
    email     String?   @unique
    img       String
    password  String
    phone     String
    address   Address
    role      role      @default(FRANCHISE)
    isActive  Boolean   @default(true)
    branch    String
    Students  Student[]
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
}

model Student {
    id            String   @id @default(auto()) @map("_id") @db.ObjectId
    name          String
    img           String
    fatherName    String
    motherName    String
    gender        gender
    qualification String?
    formNumber    String   @unique
    dob           DateTime
    phone         String
    email         String?
    dor           DateTime
    course        String
    address       Address
    branch        String
    Branch        User     @relation(fields: [branch], references: [userId], onDelete: Cascade)
    isVerified    Boolean  @default(false)
    certificate   Boolean  @default(false)
    serialNumber  Int?
    written       Int?
    practical     Int?
    project       Int?
    viva          Int?
    englishTyping Int?
    hindiTyping   Int?
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model UserApplication {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    email     String?  @unique
    img       String
    phone     String
    address   Address
    branch    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model StudentApplication {
    id            String   @id @default(auto()) @map("_id") @db.ObjectId
    name          String
    img           String
    fatherName    String
    motherName    String
    gender        gender
    qualification String?
    dob           DateTime
    phone         String
    email         String?
    dor           DateTime
    course        String
    address       Address
    branch        String
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model StudentSerialNumber {
    id           String @id @default(auto()) @map("_id") @db.ObjectId
    serialNumber Int
}

type Address {
    state    String
    district String
    pincode  String
    street   String
}

enum gender {
    MALE
    FEMALE
    TRANSGENDER
}

enum role {
    ADMIN
    FRANCHISE
}
